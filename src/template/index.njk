<!DOCTYPE html>
<html lang="en">
  {% include "./partial/global.njk" %}
  <body>
    <header class="header">
      {% include "./partial/navbar.njk" %}
    </header>
    <main>
      <div class="article1">
        <a href="{{article1.href}}">
          <img src="{{article1.pictureSrc}}" width="800" height="400" alt="{{article1.alt}}"/></a>
        <div class="article1__txt">
          <a href="{{article1.href}}">
            <h1>
              {{article1.title}}
            </h1>
            <p>
              <span class="article1__underline__txt">{{article1.subtitle}}</span><span class="article1__size__txt">{{article1.subtitleSymbol}}</span></p>
          </a>
        </div>
      </div>
      <section class="panel-blog1">
        <div class="panel-blog1__navbar">
          <h2 class="panel-blog1__navbar__txt">{{panelBlog1Txt.content}}</h2>
        </div>
        <div class="panel-blog1__navbar__categories">
          <div class="panel-blog1__navbar__categories__xl">
            {% for navBlog in panelBlog1nav %}
              <a class="panel-blog1__navbar__categories__link" href="{{navBlog.href}}">{{navBlog.title}}</a>
            {% endfor %}

          </div>
          <div class="panel-blog1__navbar__categories__md">
            <a href="{{panelBlog1navGroup.href}}">{{panelBlog1navGroup.title}}</a>
          </div>
        </div>
      </section>
      <section class="section2">
        {% for teaser in blogTeaserCell %}
          <div class="blog-teaser__cell">
            <div class="cell">
              <a class="blog-teaser" href="{{teaser.href}}">
                <div class="blog-teaser__img">
                  <img src="{{teaser.pictureSrc}}" width="700" height="500" alt="{{teaser.alt}}">
                </div>
                <div class="blog-teaser__txt">
                  <h3 class="blog-teaser__category">{{teaser.category}}</h3>
                  <h2 class="blog-teaser__headline">{{teaser.headline}}</h2>
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      </section>
      <section class="panel-blog__navbar2">
        <div class="panel-blog__navbar2__all">
          <strong class="panel-blog__navbar2__categories">More:</strong>
          {% for nav in panelBlog2nav %}
            <a class="panel-blog__navbar2__categories__item" href="{{nav.href}}">{{nav.title}}</a>
          {% endfor %}
        </div>
      </section>
    </main>
    {% include "./partial/footer.njk" %}
  </body>
</html>